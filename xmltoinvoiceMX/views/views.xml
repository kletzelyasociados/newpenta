<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="xml.list">
      <field name="name">xml list</field>
      <field name="model">xml</field>
      <field name="arch" type="xml">
        <tree>
          <field name="rfc_emisor"/>
          <field name="nombre_emisor"/>
          <field name="rfc_receptor"/>
          <field name="nombre_receptor"/>
          <field name="subtotal"/>
          <field name="total"/>
          <field name="name"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="xml.action_window">
      <field name="name">XML window</field>
      <field name="res_model">xml</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="xml.action_server">
      <field name="name">xmlserver</field>
      <field name="model_id" ref="xml"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>


    <!-- Top menu item -->
    <menuitem name="xml" id="xml.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="xml.menu_1" parent="xml.menu_root"/>
    <menuitem name="Menu 2" id="xml.menu_2" parent="xml.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="xml.menu_1_list" parent="xml.menu_1"
              action="xml.action_window"/>
    <menuitem name="Server to list" id="xml" parent="xml.menu_2"
              action="xml.action_server"/>
    
  </data>
</odoo>